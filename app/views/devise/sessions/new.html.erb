
<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@400;700&display=swap" rel="stylesheet">


<style>
  /* 全体のフォント設定 */
  body {
    font-family: 'Quicksand', sans-serif;  /* 英語にQuicksandを適用 */
  }

  /* フォームのスタイル */
  .devise-form-wrapper {
    display: flex;
    justify-content: center; /* 横方向中央揃え */
    align-items: center;     /* 縦方向中央揃え */
    height: 100vh;           /* 画面全体の高さ */
  }

  .devise-form {
    width: 100%;
    max-width: 300px;        /* フォームの最大幅を指定 */
    padding: 20px;
    border: 1px solid #ccc; /* フォームの枠線 */
    border-radius: 8px;      /* 角を丸くする */
    background-color: #f9f9f9; /* 背景色 */
  }

  /* 日本語部分にM PLUS Roundedを適用 */
  .devise-form label,
  .devise-form h2 {
    font-family: 'M PLUS Rounded 1c', sans-serif;  /* 日本語部分にM PLUS Roundedを適用 */
  }

  .devise-form input {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px; /* 各入力フィールドの下にスペース */
    border-radius: 5px;
    border: 1px solid #ccc;
  }

  .devise-form .actions {
    text-align: center;
  }

  .devise-form .actions input[type="submit"] {
    background-color: #ccc; /* ボタンの背景色 */
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
  }

  .devise-form .actions input[type="submit"]:hover {
    background-color: #0000FF; /* ボタンのホバー時の色 */
  }
</style>

<!DOCTYPE html>
<html lang="ja">
  <head>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@400;700&display=swap" rel="stylesheet">
    
    <meta charset="UTF-8">
    <title>My page</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  </head>

  <body>
    <!-- フォームラッパー -->
    <div class="devise-form-wrapper">
      <div class="devise-form text-center">
        <h2>Log in</h2>

        <%= form_with model: @user, url: user_session_path do |f| %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>

  </body>
</html>
