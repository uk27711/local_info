<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>退会確認</h2>
        <p>本当に退会しますか？</p>
        
        <!-- form_with内でfを使わない場合の修正 -->
        <%= form_with url: withdraw_users_path, method: :patch, local: true do %>
          <div class="form-group">
            <%= submit_tag '退会する', class: 'btn btn-danger' %>
          </div>
        <% end %>

        <%= link_to 'キャンセル', user_path(current_user), class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</main>
